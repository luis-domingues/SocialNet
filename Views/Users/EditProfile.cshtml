@model SocialNet.Models.User

@{
ViewData["Title"] = "Editar Perfil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center" style="background-color: #6f42c1; color: white;">
                    <h4 class="mb-0">Editar Perfil</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditProfile" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label">Nome de Usuário</label>
                            <input asp-for="Username" class="form-control" placeholder="Digite seu nome de usuário" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Digite seu email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn text-white" style="background-color: #6f42c1; border: 1px solid #6f42c1;">Salvar</button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>