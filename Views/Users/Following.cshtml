@model List<SocialNet.Models.User>

@{
ViewData["Title"] = "Seguindo";
}

<div class="container mt-4">
    <h2 class="mb-4">Usuários que você está seguindo</h2>

    @if (Model.Count > 0)
    {
    <div class="list-group">
        @foreach (var followed in Model)
        {
        <div class="list-group-item d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-person-circle" style="font-size: 2rem; color: #6f42c1;"></i>
            </div>
            <div>
                <h5 class="mb-0">
                    <a asp-action="Profile" asp-route-userId="@followed.Id" class="text-decoration-none" style="color: #6f42c1;">
                        @followed.Username
                    </a>
                </h5>
                <p class="text-muted small mb-0">@followed.Email</p>
            </div>
        </div>
        }
    </div>
    }
    else
    {
    <p class="text-muted">Você ainda não está seguindo ninguém.</p>
    }
</div>