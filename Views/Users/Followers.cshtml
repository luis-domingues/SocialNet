@model List<SocialNet.Models.User>

@{
    ViewData["Title"] = "Seguidores";
}

<h2>Seus Seguidores</h2>

@if (Model.Count > 0)
{
    <ul class="list-group">
        @foreach (var follower in Model)
        {
            <li class="list-group-item">
                <a asp-action="ViewProfile" asp-route-userId="@follower.Id">@follower.Username</a>
            </li>
        }
    </ul>
}
else
{
    <p>Você ainda não tem seguidores.</p>
}