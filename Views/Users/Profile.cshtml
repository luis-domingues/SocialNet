@model SocialNet.Models.User

@{
ViewData["Title"] = "Perfil";
}

<div class="container">
    <h2>Perfil de @Model.Username</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Username</h4>
            <p class="card-text">Email: @Model.Email</p>
            <p>Seguidores: <a asp-action="Followers">@Model.Followers.Count()</a></p>
            <p>Seguindo: <a asp-action="Following">@Model.Following.Count()</a></p>
            @if (Model.Id != int.Parse(User.Claims.First(c => c.Type == "UserId").Value))
            {
                <form asp-action="ToggleFollow" asp-controller="Users" method="post">
                    <input type="hidden" name="userId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">
                        @if (Model.Followers.Any(f => f.FollowerId == int.Parse(User.Claims.First(c => c.Type == "UserId").Value)))
                        {
                            <span>Deixar de seguir</span>
                        }
                        else
                        {
                            <span>Seguir</span>
                        }
                    </button>
                </form>
            }
            <a asp-action="EditProfile" class="btn btn-primary">Editar Perfil</a>
            <form asp-action="DeleteAccount" method="post" class="mt-3" onsubmit="return confirm('Você tem certeza que deseja deletar sua conta?')">
                <button type="submit" class="btn btn-danger">Deletar conta</button>
            </form>
        </div>
    </div>

    <h3>Seus Posts</h3>
    <div>
        @if (Model.Posts.Any())
        {
            @foreach (var post in Model.Posts.OrderByDescending(p => p.CreateAt))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <p class="card-text">@post.Content</p>
                        <p class="text-muted">@post.CreateAt.ToString("g")</p>
                    </div>
                </div>
            }
        }
        else
        {
        <p>Você ainda não criou nenhum post.</p>
        }
    </div>
</div>
