@model SocialNet.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4 text-center" style="border: 1px solid #6f42c1; max-width: 500px;">
        <div class="card-body">
            <h2 class="mb-4" style="color: #6f42c1;">Entre na sua conta</h2>

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn text-white" style="background-color: #6f42c1; border: 1px solid #6f42c1;">
                        Entrar
                    </button>
                    <a asp-action="ForgotPassword" asp-controller="Users" class="btn btn-link text-decoration-none" style="color: #6f42c1;">
                        Esqueceu sua senha?
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>