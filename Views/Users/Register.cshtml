@model SocialNet.Models.User

@{
ViewData["Title"] = "Criar conta";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4 text-center" style="border: 1px solid #6f42c1; max-width: 400px;">
        <div class="card-body">
            <h2 class="mb-4" style="color: #6f42c1;">Crie sua conta</h2>

            <form asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label">Nome de usuário</label>
                    <input asp-for="Username" class="form-control" placeholder="ex: joao_123" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="joao@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn text-white w-100"
                        style="background-color: #6f42c1; border: 1px solid #6f42c1;">
                    Registrar
                </button>
            </form>
        </div>
    </div>
</div>