@model SocialNet.Models.User

@{
    ViewData["Title"] = "Esqueceu sua senha";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4 text-center" style="border: 1px solid #6f42c1; max-width: 400px;">
        <div class="card-body">
            <h2 class="mb-4" style="color: #6f42c1;">Redefinir sua senha</h2>
            <p class="mb-4">Insira o seu email para receber um link de redefinição de senha.</p>

            <form asp-action="ForgotPassword" method="post">
                <div class="form-group mb-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email" required />
                </div>
                
                <button type="submit" class="btn text-white" style="background-color: #6f42c1; border: 1px solid #6f42c1;">
                    Enviar
                </button>
            </form>

            @if (ViewBag.Token != null)
            {
                <p class="mt-4"><strong>Token gerado (para fins de desenvolvimento):</strong></p>
                <p class="text-muted">@ViewBag.Token</p>
            }

            <p class="mt-3 text-success">@ViewBag.Message</p>
        </div>
    </div>
</div>