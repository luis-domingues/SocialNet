@model SocialNet.Models.User

@{
    ViewData["Title"] = "Esqueceu sua senha";
}

<h2>Redefinir sua senha</h2>

<p>Insira o seu email para receber um link de redefinição de senha.</p>

<form asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" id="email" required />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (ViewBag.Token != null)
{
    <p><strong>Token gerado (para fins de desenvolvimento):</strong> @ViewBag.Token</p>
}
<p>@ViewBag.Message</p>