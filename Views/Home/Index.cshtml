@{
ViewData["Title"] = "Home";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4 text-center" style="border: 1px solid #6f42c1; max-width: 500px;">
        <div class="card-body">
            <h1 class="mb-3" style="color: #6f42c1; font-family: monospace;">Hello, world!</h1>
            <h2 class="mb-4">Seja bem-vindo à SocialNET</h2>
            <h5 class="mb-4">Sua rede social construída em <span style="color: #6f42c1; font-family: monospace;">ASP.NET</span></h5>

            <div class="row row-cols-1 row-cols-sm-2 g-2">
                <div class="col">
                    <a asp-action="Register" asp-controller="Users" class="btn w-100 text-white"
                       style="background-color: #6f42c1; border: 1px solid #6f42c1;">
                        Criar conta
                    </a>
                </div>
                <div class="col">
                    <!-- Botão de login transparente com borda roxa -->
                    <a asp-action="Login" asp-controller="Users" class="btn w-100"
                       style="border: 1px solid #6f42c1; color: #6f42c1; background-color: transparent;">
                        Entrar na sua conta
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
