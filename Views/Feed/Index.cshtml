@model List<SocialNet.Models.Post>

@{
ViewData["Title"] = "Feed";
}

<div class="container">
    <h2>SocialNET</h2>
    <a asp-action="CreatePost" class="btn btn-primary">Novo post</a>
    <div class="mt-4">
        @foreach (var post in Model)
        {
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">@post.User.Username</h4>
                <p class="card-text">@post.Content</p>
                <p class="text-muted">@post.CreateAt.ToString("g")</p>

                <p>Curtidas: @post.Likes.Count()</p>

                <form asp-action="ToggleLike" method="post" class="d-inline">
                    <input type="hidden" name="postId" value="@post.Id" />
                    <button type="submit" class="btn btn-sm @post.Likes.Any(l => l.UserId == int.Parse(User.Claims.First(c => c.Type == "UserId").Value)) ? btn-danger : btn-primary">
                    @if (post.Likes.Any(l => l.UserId == int.Parse(User.Claims.First(c => c.Type == "UserId").Value)))
                    {
                    <span>Descurtir</span>
                    }
                    else
                    {
                    <span>Curtir</span>
                    }
                    </button>
                </form>

                @if (post.UserId == int.Parse(User.Claims.First(c => c.Type == "UserId").Value))
                {
                <div class="mt-3">
                    <a asp-action="EditPost" asp-route-postId="@post.Id" class="btn btn-warning btn-sm">Editar</a>
                    <form asp-action="DeletePost" method="post" class="d-inline">
                        <input type="hidden" name="postId" value="@post.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </div>
                }

                <hr />
                <h5>Comentários</h5>
                <div>
                    @foreach (var comment in post.Comments.OrderBy(c => c.CommentedAt))
                    {
                    <div class="mb-2">
                        <strong>@comment.User.Username</strong>: @comment.Content
                        <p class="text-muted">@comment.CommentedAt.ToString("g")</p>
                    </div>
                    }
                </div>

                <form asp-action="AddComment" method="post" class="mt-2">
                    <input type="hidden" name="postId" value="@post.Id" />
                    <div class="form-group">
                        <textarea name="content" class="form-control" placeholder="Adicionar um comentário..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary mt-1">Comentar</button>
                </form>
            </div>
        </div>
        }
    </div>
</div>
